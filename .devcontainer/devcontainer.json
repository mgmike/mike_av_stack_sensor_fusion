{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "ws_av_sf",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "ws_av_sf"
        }
    },
    "workspaceFolder": "/home/ws_av_sf/ros2_ws/src/mike_av_stack_sensor_fusion/",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws_av_sf/ros2_ws/src/mike_av_stack_sensor_fusion/,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "1"
    },
    "runArgs": [
        "--net=host",
        "-p", "8888:8888",
        "-v", "/dev/shm:/dev/shm",
        "-e", "DISPLAY=${env:DISPLAY}", 
        "-e", "NVIDIA_VISIBLE_DEVICES=all",
        "-it",
        "--runtime=nvidia"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/cache/humble/build,target=/home/ws_av_sf/ros2_ws/build,type=bind",
        "source=${localWorkspaceFolder}/cache/humble/install,target=/home/ws_av_sf/ros2_ws/install,type=bind",
        "source=${localWorkspaceFolder}/cache/humble/log,target=/home/ws_av_sf/ros2_ws/log,type=bind"
    ],
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R ws_av_sf /home/ws_av_sf/ros2_ws/"
}